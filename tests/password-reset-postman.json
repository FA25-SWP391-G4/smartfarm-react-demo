{
    "info": {
        "name": "Plant System Password Reset Tests",
        "description": "Collection to test password reset functionality",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Register Test User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"testuser@example.com\",\n    \"password\": \"testpassword123\",\n    \"full_name\": \"Test User\",\n    \"role\": \"Regular\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/auth/register",
                    "host": ["{{base_url}}"],
                    "path": ["auth", "register"]
                }
            }
        },
        {
            "name": "2. Login Test User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"testuser@example.com\",\n    \"password\": \"testpassword123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/auth/login",
                    "host": ["{{base_url}}"],
                    "path": ["auth", "login"]
                }
            }
        },
        {
            "name": "3. Request Password Reset",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"testuser@example.com\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/auth/forgot-password",
                    "host": ["{{base_url}}"],
                    "path": ["auth", "forgot-password"]
                }
            }
        },
        {
            "name": "4. Reset Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"password\": \"newpassword123\",\n    \"confirmPassword\": \"newpassword123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/auth/reset-password?token={{reset_token}}",
                    "host": ["{{base_url}}"],
                    "path": ["auth", "reset-password"],
                    "query": [
                        {
                            "key": "token",
                            "value": "{{reset_token}}"
                        }
                    ]
                }
            }
        },
        {
            "name": "5. Login with New Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"testuser@example.com\",\n    \"password\": \"newpassword123\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/auth/login",
                    "host": ["{{base_url}}"],
                    "path": ["auth", "login"]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3010"
        },
        {
            "key": "reset_token",
            "value": "paste_token_from_email_here"
        }
    ]
}
